{
  "manifest_version": 2,
  "name": "check-question-extension",
  "description": "This extension allows you to double-check questions for structure and improvements.",
  "homepage_url": "https://github.com/mohamedhayibor/check-question-extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": ["js/app.js"],
    "persistent": false
  }
}
